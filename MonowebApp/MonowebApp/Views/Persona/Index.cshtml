@model ReflectionIT.Mvc.Paging.PagingList<MonowebApp.Models.Persona>
   

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_LayoutAdminLt.cshtml";
    }

    <h1>Index</h1>

    <div>
        <a asp-action="Create">Crear Persona</a>
        <form method="get" class="form-inline" asp-action="Index">
            <input name="filter" class="form-control" placeholder="Filtro"
                   value="@Model.RouteValue["Filter"]" />
            <button type="submit" class="btn  btn-default">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
            </button>

            <a asp-action="Create" class="btn btn-primary btn-sm pull-right">
                <span class="glyphicon glyphicon-plus"></span>  Crear Persona
            </a>
        </form>
    </div>
    <br />
    <div  class="box box-info">>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(model => model.IdPersona)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Apellido)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.FechaNacimiento)
                    </th>
                    <th>
                        @Html.SortableHeaderFor(model => model.Telefono)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdPersona)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IdPersona }) |
                            @Html.ActionLink("Details", "Details", new { id = item.IdPersona }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.IdPersona })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <nav aria-label="Roles navigation example">
            <vc:pager paging-list="@Model"/>

        </nav>
    </div>