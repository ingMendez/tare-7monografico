                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teléfono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dirección)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoPertene)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreContactSos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefonoContactSos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AfpPertenece)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArsPertenece)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdEmpleado }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdEmpleado }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdEmpleado })
                </td>
            </tr>
        }
    </tbody>
    <vc:pager paging-list="@Model" />
</table>
